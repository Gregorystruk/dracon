.user-details {
  width: 500px;
  margin: 0 auto;
}

.user-details h2 {
  font-size: 20px;
  margin-bottom: 10px;
}

.user-details h3 {
  font-size: 14px;
}

.user-details p {
  margin-bottom: 10px;
}

.posts {
  display: none;
}

.post {
  width: 200px;
  margin: 10px;
  background-color: #ccc;
  border-radius: 5px;
}

.post h2 {
  font-size: 16px;
  margin-bottom: 10px;
}

.post p {
  font-size: 14px;
}
